<?xml version="1.0" encoding="utf-8"?>
<!--
  ============================================
  CONFIGURAÇÃO ENTERPRISE - CLIENTE GRANDE
  ============================================
  Segurança: HTTPS obrigatório, TLS 1.2+, Security Headers
  Compliance: OWASP, PCI-DSS, LGPD/GDPR ready
  
  For more information: https://go.microsoft.com/fwlink/?LinkId=301880
  -->
<configuration>
  <appSettings>
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
  </appSettings>
  
  <system.web>
    <compilation debug="true" targetFramework="4.8" />
    <httpRuntime targetFramework="4.8" 
                 enableVersionHeader="false"
                 maxRequestLength="4096"
                 executionTimeout="110" />
    
    <!-- ========================================
         SEGURANÇA: Remove header Server (ofuscação)
         ======================================== -->
    <httpCookies httpOnlyCookies="true" requireSSL="true" sameSite="Strict" />
    
    <!-- ========================================
         SEGURANÇA: Configurações de sessão
         ======================================== -->
    <sessionState mode="Off" />
    
    <!-- ========================================
         SEGURANÇA: Custom Errors (Produção)
         ======================================== -->
    <customErrors mode="RemoteOnly" defaultRedirect="~/Error">
      <error statusCode="404" redirect="~/Error/NotFound" />
      <error statusCode="500" redirect="~/Error/ServerError" />
    </customErrors>
  </system.web>
  
  <system.webServer>
    <!-- ========================================
         CAMADA 3: HTTPS Redirect (IIS Level)
         ======================================== -->
    <rewrite>
      <rules>
        <rule name="HTTP to HTTPS redirect" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
            <add input="{HTTP_HOST}" pattern="localhost" negate="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- ========================================
         SEGURANÇA: Security Headers (IIS Level)
         Redundância com código (Defense in Depth)
         ======================================== -->
    <httpProtocol>
      <customHeaders>
        <!-- Remove headers que expõem tecnologia -->
        <remove name="X-Powered-By" />
        <remove name="X-AspNet-Version" />
        <remove name="X-AspNetMvc-Version" />
        
        <!-- HSTS: Força HTTPS por 1 ano -->
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
        
        <!-- Previne MIME-sniffing -->
        <add name="X-Content-Type-Options" value="nosniff" />
        
        <!-- Previne Clickjacking -->
        <add name="X-Frame-Options" value="DENY" />
        
        <!-- Proteção XSS -->
        <add name="X-XSS-Protection" value="1; mode=block" />
        
        <!-- Política de referência -->
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        
        <!-- Content Security Policy -->
        <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'" />
        
        <!-- Permissions Policy -->
        <add name="Permissions-Policy" value="accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()" />
      </customHeaders>
    </httpProtocol>
    
    <!-- ========================================
         SEGURANÇA: TLS Configuration
         ======================================== -->
    <security>
      <requestFiltering removeServerHeader="true">
        <!-- Limite de tamanho de requisição: 4MB -->
        <requestLimits maxAllowedContentLength="4194304" />
      </requestFiltering>
    </security>
    
    <!-- ========================================
         API HANDLERS
         ======================================== -->
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
    
    <!-- ========================================
         COMPRESSION: Gzip/Deflate (Performance)
         ======================================== -->
    <httpCompression>
      <dynamicTypes>
        <add mimeType="application/json" enabled="true" />
        <add mimeType="application/json; charset=utf-8" enabled="true" />
      </dynamicTypes>
      <staticTypes>
        <add mimeType="application/json" enabled="true" />
      </staticTypes>
    </httpCompression>
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
  </system.webServer>
  
